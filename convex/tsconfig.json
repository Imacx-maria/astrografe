{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@convex/_generated/api": ["./_generated/api"],
      "@convex/_generated/api.d.ts": ["./_generated/api.d.ts"],
      "@convex/_generated/dataModel": ["./_generated/dataModel.d.ts"],
      "@convex/_generated/server": ["./_generated/server"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
